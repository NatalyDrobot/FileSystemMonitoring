<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <title> Мониторинг файловой системы </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="~/Content/themes/blue/style.css" />

    <script type="text/javascript" src="~/Scripts/jquery-2.2.4.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <script type="text/javascript" src="~/Scripts/jquery.tablesorter.min.js"></script>
    <script type="text/javascript" src="~/Scripts/script.js"></script>

</head>

<body>
    <div class="navbar-wrapper">
        <div class="container">
            <div class="navbar navbar-inverse row">
                <div class="navbar-inner col-md-6" >
                        <h2 style="color: white; padding-left: 10px;">Мониторинг файловой системы</h2>
                </div><!-- /.navbar-inner -->

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-collapse col-md-6">
                        <div class="pull-right">
                            <ul class="nav pull-right">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color:white;">Добро пожаловать, @User.Identity.Name <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            @*<a href="@Url.Action("ProfileUser", "Account")"><i class="icon-cog"></i> Профайл</a>*@
                                            ...
                                        </li>
                                        <li class="divider"></li>
                                        <li>
                                            <a href="@Url.Action("Logoff", "Account")"><i class="icon-off"></i> Выйти</a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!--/.nav-collapse -->
                }
            </div><!-- /.navbar -->

        </div> <!-- /.container -->
    </div><!-- /.navbar-wrapper -->

     <div class="container marketing">

        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
